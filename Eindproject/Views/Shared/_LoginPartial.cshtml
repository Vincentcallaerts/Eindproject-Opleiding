@using Microsoft.AspNetCore.Identity
@using Eindproject.Domain


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
  

<ul class="navbar-nav">
    <li>
        <!-- Search form -->
        <form class="form-inline" asp-controller="movie" asp-action="Search" method="post">
            <input class="form-control mr-sm-2 search-input" type="search" placeholder="Zoeken..." name="search" id="search" >
            <button class="btn btn-search my-2 my-sm-0 btn-info " type="submit" style="margin:0 7px 0 0" >
                <i class="fa fa-search fa-lg "  ></i>
            </button>
        </form>
    </li>

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Movie", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
        
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>

    }

</ul>
