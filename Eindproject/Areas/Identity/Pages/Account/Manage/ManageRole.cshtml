@page
@model ManageRoleModel
<partial name="_StatusMessage" model="Model.StatusMessage" />

<form method="post">

    <div class="form-group">
        <label asp-for="Input.UserRoleId">UserRole</label>
        <select class="form-control" asp-items="@Model.UserRoles" asp-for="Input.UserRoleId"></select>
        <span class="text-danger" asp-validation-for="Input.UserRoleId"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.UserId">User</label>
        <select class="form-control" asp-items="@Model.Users" asp-for="Input.UserId"></select>
        <span class="text-danger" asp-validation-for="Input.UserId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add role to user</button>
</form>