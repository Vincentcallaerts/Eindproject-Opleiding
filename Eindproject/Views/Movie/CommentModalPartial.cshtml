@model CommentViewModel
@using Microsoft.AspNetCore.Identity
@using Eindproject.Domain

@inject UserManager<ApplicationUser> UserManager
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string Username = User.Identity.Name;
}


<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit Comment from @User.Identity.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body table-placeholder">
                <form id="myForm" action="Edit">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Comment_Id" />
                        <textarea asp-for="@Model.Comment_Message" class="form-control ml-1 shadow-none textarea"></textarea>
                        <span asp-validation-for="Comment_Message" class="text-danger"></span>
                        @Html.AntiForgeryToken();
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save </button>
            </div>
        </div>
    </div>
</div>